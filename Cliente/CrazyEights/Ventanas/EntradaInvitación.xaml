<UserControl x:Class="CrazyEights.Ventanas.EntradaInvitación"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrazyEights.Ventanas"
             mc:Ignorable="d" 
             d:DesignHeight="106" d:DesignWidth="632"
             Width="Auto" Height="106">
    <Grid>
        <Image Source="\Recursos\RectanguloEntradaListaAmigos.png" Width="Auto" Height="106" Stretch="Fill"/>
        <Button x:Name="btnUnirse" Content="Unirse" Margin="0,0,30,0" VerticalAlignment="Center" Height="40" Click="UnirseASala" HorizontalAlignment="Right" Width="100"/>
        <Button x:Name="btnRechazar" Content="Rechazar" Margin="0,0,150,0" Click="QuitarInvitacion" HorizontalAlignment="Right" Width="100" Height="40" VerticalAlignment="Center"/>
        <Label x:Name="lbNombreJugador" Content="Nombre de Usuario" Margin="40,20,300,0" VerticalAlignment="Top" Height="30"/>
        <Label x:Name="lbContenidoInvitacion" Content="Te ha invitado a unirse a su sala." Margin="40,50,300,0" Height="30" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
