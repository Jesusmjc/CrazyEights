<UserControl x:Class="CrazyEights.Ventanas.EntradaJugador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrazyEights.Ventanas"
             mc:Ignorable="d" 
             d:DesignHeight="106" d:DesignWidth="632"
             Width="Auto" Height="106">
    <Grid>
        <Image Source="\Recursos\RectanguloEntradaListaAmigos.png" Width="Auto" Height="106" Stretch="Fill"/>
        <Label x:Name="lbNombreJugador" Content="Nombre de Usuario" HorizontalAlignment="Left" Margin="148,20,0,0" VerticalAlignment="Top" Width="168" Height="30"/>
        <Label x:Name="lbIdJugador" Content="ID: XXXX" HorizontalAlignment="Left" Margin="148,0,0,20" VerticalAlignment="Bottom" Width="60" Height="30"/>
        <Label x:Name="lbEstadoJugador" Content="Estado" HorizontalAlignment="Left" Margin="238,0,0,20" VerticalAlignment="Bottom" Width="78" Height="30"/>
        <Button x:Name="btnInvitarAPartida" Content="Invitar a Partida" Margin="0,0,30,0" VerticalAlignment="Center" Height="40" Click="InvitarJugadorAPartida" HorizontalAlignment="Right" Width="100"/>
        <Image x:Name="imgFotoPerfil" Source="\Recursos\usuario.png" Margin="20,20,0,20" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
