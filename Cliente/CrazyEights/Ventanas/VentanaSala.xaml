        <Canvas Height="180" Margin="600,0,60,0" VerticalAlignment="Center">
            <Image Source="\Recursos\PlaceholderJugadorSala.png" Stretch="Fill" Height="140" VerticalAlignment="Top" Canvas.Left="0" Canvas.Top="0"/>
            <Label x:Name="lbNombreJugador4" Content="Nombre de Jugador" Height="26" VerticalAlignment="Bottom" FontSize="11" Canvas.Left="10" Canvas.Right="10" Canvas.Bottom="50" Width="120"/>
