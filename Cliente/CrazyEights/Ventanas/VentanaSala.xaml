            <Image x:Name="imgPalomitaListo2" Source="\Recursos\Palomita.png" Stretch="Fill" Margin="0,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Left="55" Canvas.Right="55" Width="30" Visibility="Hidden"/>
            <Image x:Name="imgPuntosEnEspera2" Source="\Recursos\PuntosEspera.png" Stretch="Fill" Margin="0,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Bottom="0" Canvas.Left="48" Width="44"/>
