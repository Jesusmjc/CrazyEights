            <Image x:Name="imgCoronaHost4" Source="\Recursos\corona.png" Stretch="Fill" Margin="0,0,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Center" Canvas.Top="0" Canvas.Left="58" Canvas.Right="58"  Width="24" Visibility="Hidden"/>
            <Image x:Name="imgPalomitaListo4" Source="\Recursos\Palomita.png" Stretch="Fill" Margin="0,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Left="55" Canvas.Right="55" Width="30" Visibility="Hidden"/>
            <Image x:Name="imgPuntosEnEspera4" Source="\Recursos\PuntosEspera.png" Stretch="Fill" Margin="0,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Bottom="0" Canvas.Left="48" Width="44"/>
        </Canvas>

    </Grid>
</Window>
